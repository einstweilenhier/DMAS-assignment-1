{{#if babbles}}
    <div class="ui row">
        {{> deletemodal item="babble"}}
        {{#each babbles}}
            <div class="ui fluid card babble" id="{{_id}}">
                <div class="content">
                    {{> canDelete}}
                    <div class="description" style="font-size: 1.25rem;">
                        {{#if image.data}}
                            <div class="ui rounded image">
                                <img src="data:{{image.contentType}};base64,{{image.data}}">

                            </div>
                            <div class="ui divider"></div>
                        {{/if}}
                        <p>{{text}}</p>
                    </div>
                </div>
                <div class="extra content">
                    Posted {{datestring}}
                    <div class="right floated author">
                        <a href="/user/{{user._id}}">{{user.name}}
                            {{#if user.image.data}}
                                <img class="ui avatar image"
                                     src="data:{{user.image.contentType}};base64,{{user.image.data}}">
                            {{else}}
                                <img class="ui avatar image" src="http://semantic-ui.com/images/wireframe/image.png">
                            {{/if}}
                        </a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{else}}
    <div class="ui row displace20">
        <div class="ui centered header">
            There's nothing here :(
        </div>
    </div>
{{/if}}