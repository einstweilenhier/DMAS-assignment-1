{{#if babbles}}
    <div class="ui small basic modal">
        <div class="ui icon header">
            <i class="trash icon"></i>
            Delete this Babble?
        </div>
        <div class="content">
            <p>Are you sure you want to delete this babble?</p>
        </div>
        <div class="actions">
            <div class="ui red basic cancel inverted button">
                <i class="remove icon"></i>
                No
            </div>
            <div class="ui green ok inverted button">
                <i class="checkmark icon"></i>
                Yes
            </div>
        </div>
    </div>
    <script src="/js/babbles.js"></script>
    {{#each babbles}}
        <div class="ui fluid card" id="{{_id}}">
            <div class="content">
                {{#if canDelete}}
                    <a class="ui red top right attached label deleteBabble">
                        <i class="minus icon"></i> Delete
                    </a>
                {{/if}}
                <div class="description" style="font-size: 1.25rem;">
                    {{#if image.data}}
                        <div class="ui rounded image">
                            <img src="data:{{image.contentType}};base64,{{image.data}}">

                        </div>
                        <div class="ui divider"></div>
                    {{/if}}
                    <p>{{text}}</p>
                </div>
            </div>
            <div class="extra content">
                Posted {{datestring}}
                <div class="right floated author">
                    <a href="/user/{{user._id}}">{{user.name}}
                        {{#if user.image.data}}
                            <img class="ui avatar image"
                                 src="data:{{user.image.contentType}};base64,{{user.image.data}}">
                        {{else}}
                            <img class="ui avatar image" src="http://semantic-ui.com/images/wireframe/image.png">
                        {{/if}}
                    </a>
                </div>
            </div>
        </div>
    {{/each}}
{{/if}}